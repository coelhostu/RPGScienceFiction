          <div className="mb-2">
            <label className="font-bold">Nome:</label>
            <input type="text" className="w-full p-1 border border-gray-300 rounded" />
          </div>
          <div>
            <label className="font-bold">Motivação e Notas:</label>
            <textarea className="w-full h-20 p-1 border border-gray-300 rounded" 
              placeholder="O que move seu personagem? Quais seus objetivos?" />
          </div>
        </div>
        <div className="border-r-2 border-black p-2 text-center">
          <div className="h-full flex items-center justify-center text-gray-500">
