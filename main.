import React, { useState } from 'react';
import { Card } from '@/components/ui/card';

const CharacterSheet = () => {
  const arquetipos = [
    // Técnicos
    "Mecânico",
    "Hacker",
    "Programador",
    "Técnico em Robótica",
    "Engenheiro",
    "Técnico em Eletrônica",
    // Artísticos
    "Músico",
    "DJ",
    "Artista Digital",
    "Artista de Rua",
    "Produtor Musical",
    "Designer",
    // Boêmios/Vida Noturna
    "Boêmio",
    "Bartender",
    "Dono de Bar",
    "Promoter",
    "Jogador Profissional",
    "Segurança de Clube",
